<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/html">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - TheCrewCommunity</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @await RenderSectionAsync("Styles", false)
</head>
<body>
<header>
    <nav>
        <div class="navigationBar">
            <a asp-page="/Index">Home</a>
            <div class="subNav">
                <button class="subNavButton">The Crew 2[WIP]<i class="fa fa-caret-down"></i></button>
                <div class="subNavContent">
                    <a>Image Hub[WIP]</a>
                </div>
            </div>
            <div class="subNav">
                <button class="subNavButton">Motorfest <i class="fa fa-caret-down"></i></button>
                <div class="subNavContent">
                    <div class="subNav2">
                        <button class="subNavButton">Pro Settings <i class="fa fa-caret-down"></i></button>
                        <div class="subNavContent2">
                            <a asp-page="/Motorfest/ProSettings/Cars">Cars</a>
                            <a>Bikes[WIP]</a>
                            <a>Planes[WIP]</a>
                            <a>Boats[WIP]</a>
                        </div>
                    </div>
                    <a asp-page="/Motorfest/Map">Map[WIP]</a>
                    <a>Image Hub[WIP]</a>
                </div>
            </div>
            @if (User.Identity is not null && User.Identity.IsAuthenticated)
            {
                <div class="dropDown navRight">
                    <button class="dropDownButton">@User.Identity.Name <i class="fa fa-caret-down"></i></button>
                    <div class="dropDownContent">
                        <a asp-page="/Account/Profile">Profile</a>
                        <a asp-page="/Account/Logout">Logout</a>
                    </div>
                </div>
            }
            else
            {
                <div class="navRight">
                    <a asp-page="/Account/Login">Login with Discord</a>
                </div>
            }
        </div>
    </nav>
</header>
<main role="main" class="main">
    @RenderBody()
</main>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2023 - TheCrewCommunity - <a asp-area="" asp-page="/Privacy">Privacy</a>
        <script type="text/javascript" src="https://storage.ko-fi.com/cdn/widget/Widget_2.js"></script><script type="text/javascript">kofiwidget2.init('Support on ko-fi', '#2a2a2a', 'H2H6G8PAH');kofiwidget2.draw();</script> 
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>