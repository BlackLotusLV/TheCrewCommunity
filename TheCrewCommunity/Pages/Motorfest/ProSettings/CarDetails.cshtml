@page
@model TheCrewCommunity.Pages.Motorfest.ProSettings.CarDetails

@{
    ViewData["Title"] = @Model.Title;
}

<div class="vehicleBox">
    <div class="carInfoBox">
        <h1>@Model.CarProSettings.Vehicle.Brand</h1>
        <h2>@Model.CarProSettings.Vehicle.ModelName</h2>
    </div>
    <div class="proSettingsBox">
        <h3>Transmission</h3>
        <div class="proSettingsItem">
            <span class="sliderName">Final Drive</span>
            <input type="range" min="-20" max="0" value="@Model.CarProSettings.FinalDrive" disabled/>
        </div>
        @if (Model.CarProSettings.Vehicle.Transmission == "4wd")
        {
            <div class="proSettingsItem">
                <span class="sliderName">Power Distribution</span>
                <input type="range" min="20" max="60" value="@Model.CarProSettings.PowerToFront" disabled/>
            </div>
        }
        <h3>Tires</h3>
        <div class="proSettingsItem">
            <span class="sliderName">Grip Front</span>
            <input type="range" min="-20" max="0" value="@Model.CarProSettings.GripFront" disabled/>
        </div>
        <div class="proSettingsItem">
            <span class="sliderName">Grip Rear</span>
            <input type="range" min="-20" max="0" value="@Model.CarProSettings.GripRear" disabled/>
        </div>
        <h3>Brakes</h3>
        <div class="proSettingsItem">
            <span class="sliderName">Brake Balance</span>
            <input type="range" min="40" max="80" value="@Model.CarProSettings.BrakeToFront" disabled/>
        </div>
        <div class="proSettingsItem">
            <span class="sliderName">Brake Power</span>
            <input type="range" min="-30" max="0" value="@Model.CarProSettings.BrakePower" disabled/>
        </div>
        <h3>Aero Dynamics</h3>
        <div class="proSettingsItem">
            <span class="sliderName">Load Front</span>
            <input type="range" min="-30" max="0" value="@Model.CarProSettings.LoadFront" disabled/>
        </div>
        <div class="proSettingsItem">
            <span class="sliderName">Load Rear</span>
            <input type="range" min="-30" max="0" value="@Model.CarProSettings.LoadRear" disabled/>
        </div>
        <h3>Suspension</h3>
        <div class="proSettingsItem">
            <span class="sliderName">Spring Front</span>
            <input type="range" min="-20" max="10" value="@Model.CarProSettings.SpringFront" disabled/>
        </div>
        <div class="proSettingsItem">
            <span class="sliderName">Spring Rear</span>
            <input type="range" min="-20" max="10" value="@Model.CarProSettings.SpringRear" disabled/>
        </div>
        <div class="proSettingsItem">
            <span class="sliderName">Damper Compression Front</span>
            <input type="range" min="-20" max="20" value="@Model.CarProSettings.DamperCompressionFront" disabled/>
        </div>
        <div class="proSettingsItem">
            <span class="sliderName">Damper Compression Rear</span>
            <input type="range" min="-20" max="20" value="@Model.CarProSettings.DamperCompressionRear" disabled/>
        </div>
        <div class="proSettingsItem">
            <span class="sliderName">Damper Rebound Front</span>
            <input type="range" min="-20" max="20" value="@Model.CarProSettings.DamperReboundFront" disabled/>
        </div>
        <div class="proSettingsItem">
            <span class="sliderName">Damper Rebound Rear</span>
            <input type="range" min="-20" max="20" value="@Model.CarProSettings.DamperReboundRear" disabled/>
        </div>
        <h3>Anti Roll Bars</h3>
        <div class="proSettingsItem">
            <span class="sliderName">ARB Front</span>
            <input type="range" min="-20" max="10" value="@Model.CarProSettings.AntiRollBarFront" disabled/>
        </div>
        <div class="proSettingsItem">
            <span class="sliderName">ARB Rear</span>
            <input type="range" min="-20" max="10" value="@Model.CarProSettings.AntiRollBarRear" disabled/>
        </div>
        <h3>Alignment</h3>
        <div class="proSettingsItem">
            <span class="sliderName">Camber Front</span>
            <input type="range" min="-25" max="25" value="@Model.CarProSettings.CamberFront" disabled/>
        </div>
        <div class="proSettingsItem">
            <span class="sliderName">Camber Rear</span>
            <input type="range" min="-25" max="25" value="@Model.CarProSettings.CamberRear" disabled/>
        </div>
    </div>
</div>
<div class="userBox">
    
</div>